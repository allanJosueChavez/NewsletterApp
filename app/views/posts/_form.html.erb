<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.hidden_field :newsletters_id, value: params[:id] if @action == "new"%>
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, size: 50 %>
  </div>
  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, :cols => "100", :rows => "10" %>
  </div>
  <div>
    <p>Post image:</p>
    <%= form.file_field :image %><br/>
    <%= image_tag(post.image, width: "300px") if post.image.attached?%>
  </div>
  <br/>
  <div>
    <%= form.submit class:'btn btn-lg btn-success float-right'%>
  </div>
<% end %>
