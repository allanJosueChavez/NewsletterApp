<div class="container">
  <div class="row justify-content-center align-items-center" style="min-height: 100vh">
       <div class="col">
        <h2><strong>WELCOME...</strong><br />
        to your next favorite newsletter!</h2>
      <h6><em>Share your thoughts, experiences and knowledge with others!</em></h6>
      </div> 
    <div class="col-8 col-lg">
      <div style="text-align: center;">

<h1>SIGN UP</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
   <strong> <%= f.label :full_name %></strong><em> (Optional)</em><br />
    <%= f.text_field :full_name %>
  </div>
  <div class="field">
   <strong> <%= f.label :email %></strong><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div>
    <strong><%= f.label :birthdate %></strong><br />
    <%= f.date_select :birthdate , start_year: 1950, end_year: Date.today.year%>
  </div>
  <br>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div><br/>
    <p><strong>Upload your avatar:</strong></p>
    <div style="padding-left: 120px;">
    <%= f.file_field :avatar %><br/>
  </div><br/>
  <div class="actions">
    <%= f.submit "Sign up", class:'btn btn-outline-warning' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>